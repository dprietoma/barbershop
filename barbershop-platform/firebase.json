{
  "hosting": {
    "public": "dist/customer/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      { "source": "/sitemap.xml", "headers": [{ "key": "Cache-Control", "value": "no-cache" }] },
      { "source": "/robots.txt",  "headers": [{ "key": "Cache-Control", "value": "no-cache" }] }
    ],
    "rewrites": [
      {
        "source": "/sitemap.xml",
        "destination": "/sitemap.xml"
      },
      {
        "source": "/robots.txt",
        "destination": "/robots.txt"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
